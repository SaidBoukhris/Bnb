{# A quoi ressemble l'affichage d'un champ de type "annonce_images" #}
{% block _annonce_images_widget %} 

    <p>Ici, vous pouvez ajouter vos propres images !</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" class="btn btn-primary" id="add-image">
            <i class="fas fa-plus"></i>
            Ajouter une image
        </button>
    </div>
{% endblock %}

{% block _annonce_images_entry_row %}
    {# Le fait de spécifier le row ici, permet de dire à twig "ne m'ajoute pas le label et le error qui sont en général créer automatiquement #}
    {{ form_widget(form) }}
{% endblock %}

{% block _annonce_images_entry_widget %}

    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}

                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                     </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>

        </div>
    </div>

{% endblock %}